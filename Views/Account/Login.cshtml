@model LoginViewModel
@using VWA_TFE.ViewModel
@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> signInManager

@{
    ViewData["Title"] = "Login";
}


<form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" role="form" class="align-center">
    <h1>Login</h1>
    <h4>Use your VWA account to log in.</h4>

    <table class="form-table">
        <tr>
            <th><label asp-for="UserName"></label></th>
            <td>
                <input asp-for="UserName" placeholder="ex: johndoe" /><br/>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <th><label asp-for="Password"></label></th>
            <td>
                <input asp-for="Password" placeholder="myVerySecurePassword" /><br />
                <span asp-validation-for="Password" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="RememberMe">
                @Html.DisplayNameFor(m => m.RememberMe)
                </label>
            </td>
            <td>
                <input asp-for="RememberMe" />
            </td>
        </tr>
        <tr>
            <td colspan="2"><button class="vwa-submit-btn" type="submit">Log in</button></td>
        </tr>
    </table>
    <p>
        <a asp-action="Register"> Register as a new user?</a>
    </p>
    <p>
        <a asp-action="ForgotPassword"> Forgot your passowrd?</a>
    </p>
</form>